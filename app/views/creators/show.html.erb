
<%= render partial: "users/info", locals: {user: @creator} %>
<% if current_creator && current_creator.id == @creator.id %>
<%= button_to "Edit Profile", edit_creator_path(@creator), method: "get" %>
<%= button_to "Add Merchandise", new_creator_merchandise_path(@creator.id), method: "get" %>
<% end %>

<% @creator.merchandises.each do |merch|%>
<h3><%= link_to merch.title, creator_merchandise_path(@creator, merch) %></h3>
<h3><%= merch.price %></h3>
<p><%= merch.description%></p>
<% end %>